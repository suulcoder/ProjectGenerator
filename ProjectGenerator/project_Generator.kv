#:kivy 1.0.9
#:import ListAdapter kivy.adapters.listadapter.ListAdapter
#:import ListItemButton kivy.uix.listview.ListItemButton

<Start>:    
    canvas:
        Color:
            rgb: [0.62,0.027,0.027] 

        Rectangle:
            pos: 0,root.top-30
            size: self.width, 80

        Rectangle:
            pos: 0,-50
            size: self.width, 80

    BoxLayout
        id: login_layout
        orientation: 'vertical'
        padding: [70,0,70,10]
        spacing: 5

        BoxLayout:
            Label:
                text: 'PROJECT GENERATOR'
                font_size: 30

        Image:
            source: "image.png"

        BoxLayout:
            orientation: 'vertical'
            padding: [120,30,120,20]

            TextInput:
                readonly: False
                hint_text: "USERNAME"
                id: user
                multiline:False
                font_size: 14

            TextInput:
                readonly: False
                hint_text: "PASSWORD"
                id: password
                multiline:False
                password:True
                font_size: 14

        BoxLayout:
            orientation: 'horizontal'
            padding: [170,50,170,10]
            
            Button:
                background_color: (1,0.027,0.027,1.0)
                text: 'LOGIN'
                font_size: 12
                on_press: root.login()

            Button:
                background_color: (1,0.027,0.027,1.0)
                text: 'SIGN UP'
                font_size: 12
                on_press: root.Sign()

        BoxLayout:
            Label:
                id: defensive
                text: ''
                font_size: 10        


<Connected>:
    canvas:
        Color:
            rgb: [0.62,0.027,0.027] 

        Rectangle:
            pos: 0,root.top-150
            size: self.width, 150

        Rectangle:
            pos: 0,-50
            size: self.width, 80

    BoxLayout
        id: box_layout
        orientation: 'vertical'
        padding: [70,25,70,30]
        spacing: 5

        BoxLayout:
            orientation: 'vertical'
            Label:
                id: name
                text: "PROJECT GENERATOR"
                size: root.width,20
                font_size: 30

            BoxLayout:
                orientation: 'horizontal'
                spacing: 15
                Label:
                    id: integrants
                    text: ""
                    font_size: 10
                Label:
                    id: complexity
                    text: ""
                    font_size: 10
                Label:
                    id: time
                    text: ""
                    font_size: 10
            Label:
                id: description
                text: ""
                font_size: 10


        BoxLayout:
            orientation: 'horizontal'
            padding: [1,70,1,70]
            Button:
                background_color: (1,0.027,0.027,1.0)
                text: 'SELECT PROJECT'
                font_size: 12
                on_press: root.select()

            Button:
                background_color: (1,0.027,0.027,1.0)
                text: 'SHOW ALL'
                font_size: 12
                on_press: root.showAll()

            Button:
                background_color: (1,0.027,0.027,1.0)
                text: 'RECOMENDATIONS'
                font_size: 12
                on_press: root.recomend()

            Button:
                background_color: (1,0.027,0.027,1.0)
                text: '-DELETE NODE'
                font_size: 12
                on_press: root.delete()

            Button:
                background_color: (1,0.027,0.027,1.0)
                text: '+ADD NODE'
                font_size: 12
                on_press: root.add()

            Button:
                background_color: (1,0.027,0.027,1.0)
                text: 'SIGN OUT'
                font_size: 12
                on_press: root.SignOut()

        BoxLayout:
            orientation: 'vertical'
            padding: [70,0,70,0]
            ListView:
                id: project_list
                adapter: root.adapter

<AddNode>:
    canvas:
        Color:
            rgb: [0.62,0.027,0.027] 

        Rectangle:
            pos: 0,root.top-30
            size: self.width, 80

        Rectangle:
            pos: 0,-50
            size: self.width, 80

    BoxLayout
        id: login_layout
        orientation: 'vertical'
        padding: [70,35,70,25]
        spacing: 5

        BoxLayout:
            orientation: 'horizontal'

            TextInput:
                readonly: False
                hint_text: "NAME PROJECT"
                id: ProjectName
                multiline:False
                font_size: 14

            TextInput:
                readonly: False
                hint_text: "Name of Course"
                id: CourseName
                multiline:False
                font_size: 14

            TextInput:
                readonly: False
                hint_text: "Name of Resource"
                id: ResourceName
                multiline:False
                font_size: 14

        BoxLayout:
            orientation: 'horizontal'

            TextInput:
                readonly: False
                hint_text: "Description PROJECT"
                id: ProjectDescription
                font_size: 14

            TextInput:
                readonly: False
                hint_text: "Departament of Course"
                id: CourseDepartament
                multiline:False
                font_size: 14

            TextInput:
                readonly: False
                hint_text: "Description of Resource"
                id: ResourceDescription
                font_size: 14

        BoxLayout:
            orientation: 'horizontal'

            TextInput:
                readonly: False
                hint_text: "Time in hours"
                id: time
                font_size: 14

            TextInput:
                readonly: False
                hint_text: "Complexity"
                id: complexity
                multiline:False
                font_size: 14

            TextInput:
                readonly: False
                hint_text: "Number of integrants"
                id: integrants
                font_size: 14

        BoxLayout:
            orientation: 'vertical'

            BoxLayout:
                orientation: 'horizontal'

                Button:
                    background_color: (1,0.027,0.027,1.0)
                    text: 'SAVE'
                    font_size: 12
                    on_press: root.save()            
            
                Button:
                    background_color: (1,0.027,0.027,1.0)
                    text: 'CANCEL'
                    font_size: 12
                    on_press: root.cancel()            
            Label:
                id: description
                text: ""
                font_size: 10
