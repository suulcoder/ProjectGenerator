#:kivy 1.0.9
#:import ListAdapter kivy.adapters.listadapter.ListAdapter
#:import ListItemButton kivy.uix.listview.ListItemButton

<Start>:    
    canvas:
        Color:
            rgb: [0.62,0.027,0.027] 

        Rectangle:
            pos: 0,root.top-30
            size: self.width, 80

        Rectangle:
            pos: 0,-50
            size: self.width, 80

    BoxLayout
        id: login_layout
        orientation: 'vertical'
        padding: [70,0,70,10]
        spacing: 5

        BoxLayout:
            Label:
                text: 'PROJECT GENERATOR'
                font_size: 30

        Image:
            source: "image.png"

        BoxLayout:
            orientation: 'vertical'
            padding: [120,30,120,20]

            TextInput:
                hint_text: "USERNAME"
                id: user
                multiline:False
                font_size: 14

            TextInput:
                hint_text: "PASSWORD"
                id: password
                multiline:False
                password:True
                font_size: 14

        BoxLayout:
            orientation: 'horizontal'
            padding: [170,50,170,10]
            
            Button:
                background_color: (1,0.027,0.027,1.0)
                text: 'LOGIN'
                font_size: 12
                on_press: root.login()

            Button:
                background_color: (1,0.027,0.027,1.0)
                text: 'SIGN UP'
                font_size: 12
                on_press: root.Sign()

        BoxLayout:
            Label:
                id: defensive
                text: ''
                font_size: 10        


<Connected>:
    canvas:
        Color:
            rgb: [0.62,0.027,0.027] 

        Rectangle:
            pos: 0,root.top-30
            size: self.width, 80

        Rectangle:
            pos: 0,-50
            size: self.width, 80

    BoxLayout
        id: box_layout
        orientation: 'vertical'
        padding: [70,25,70,10]
        spacing: 5

        Image:
            source: "image.png"

        BoxLayout:
            orientation: 'horizontal'
            padding: [70,70,70,70]
            Button:
                background_color: (1,0.027,0.027,1.0)
                text: 'SELECT PROJECT'
                font_size: 12
                on_press: root.select()

            Button:
                background_color: (1,0.027,0.027,1.0)
                text: 'RECOMENDATIONS FOR YOU'
                font_size: 12
                on_press: root.recomend()

            Button:
                background_color: (1,0.027,0.027,1.0)
                text: '+ADD NODE'
                font_size: 12
                on_press: root.add()

        BoxLayout:
            orientation: 'vertical'
            padding: [70,0,70,0]
            ListView:
                id: project_list
                adapter: root.adapter

<ProjectScreen>:
    canvas:
        Color:
            rgb: [0.62,0.027,0.027] 

        Rectangle:
            pos: 0,root.top-30
            size: self.width, 80

        Rectangle:
            pos: 0,-50
            size: self.width, 80

    BoxLayout:
        Label:
            text: root.name
            font_size: 30
