#:kivy 1.0.9

<Start>:    

    canvas:
        Color:
            rgb: [0.97,0.07,0.07] 

        Rectangle:
            pos: 0,root.top - 120
            size: self.width, 10

        Rectangle:
            pos: 0,root.top
            size: self.width, 5 - 100

        Rectangle:
            pos: self.width/2-150,self.height/2-100
            size: 300, 200
    
    Label:
        font_size: 50  
        center_x: root.width / 2
        top: root.top
        text: "Project Generator"   
    
    Button:
        id: login
        center_x: (root.width/2) - 50
        top: root.top/2 - 60
        size: 70,20
        text: "LOGIN"
        background_color: 0,0,0
        on_press: root.login()

    Button:
        id: Signup
        center_x: (root.width/2) + 50
        top: root.top/2 - 60
        size: 70,20
        background_color: 0,0,0
        text: "SIGN UP"
        on_press: root.Sign()

    TextInput:
        id: user
        multiline: False
        center_x: root.width / 2
        top: root.top/2 + 20
        size: 250,30
        hint_text: "USERNAME"

    TextInput:
        id: password
        multiline: False
        password: True
        center_x: root.width / 2
        top: root.top/2 - 20
        size: 250,30
        hint_text: "PASSWORD"

<Projects>:
    canvas:
        Color:
            rgb: [1,0,0] 

        Rectangle:
            pos: 0,root.top - 120
            size: self.width, 10

        Rectangle:
            pos: 0,root.top
            size: self.width, 5 - 100

        Rectangle:
            pos: self.width/2-150,self.height/2-100
            size: 300, 200    